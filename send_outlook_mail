Private Sub send_outlook_mail_Click(status As String)
    
    On Error GoTo ErrHandler
    
    ' SET Outlook APPLICATION OBJECT.
    Dim objOutlook As Object
    Set objOutlook = CreateObject("Outlook.Application")
    
    ' CREATE EMAIL OBJECT.
    Dim objEmail As Object
    Set objEmail = objOutlook.CreateItem(olMailItem)

    Sheets("mailingList").Select
    mailAddress = Range("D20").Value
    
    If Range("D21").Value = "No" Then
        Exit Sub
    End If

    Worksheets("List").Select
    Range("A5").Select
    
    LastRow = ActiveSheet.UsedRange.SpecialCells(xlCellTypeLastCell).Row
    strDate = Cells(LastRow, 1).Value
    intDiff = Cells(LastRow, 11).Value

    If status = "password_error" Then
    
        With objEmail
            .To = "youseob.koh@samsung.com"
            .bcc = "cpgs@samsung.com"
            .Subject = "eStore Stock Diff - password_error"
            .Body = "eStore Stock Diff - password_error"
            .Display        ' Display the message in Outlook.
            .send
        End With
        
    ElseIf errRefresh = "Y" Then
    
        With objEmail
            .To = "youseob.koh@samsung.com"
            .bcc = "cpgs@samsung.com"
            .Subject = "eStore Stock Diff (" & strDate & ") - ERROR"
            .Body = errMsg
            .Display        ' Display the message in Outlook.
            .send
        End With
        
    Else
        
'        With objEmail
'            .To = "youseob.koh@samsung.com"
'            .bcc = "cpgs@samsung.com"
'            .Subject = "eStore Stock Diff (" & strDate & ") - SUCCESS"
'            .Body = "eStore Stock Diff (" & strDate & ") - SUCCESS"
'            .Display        ' Display the message in Outlook.
'            .send
'        End With
        
        With objEmail
            .To = mailAddress
            .bcc = "cpgs@samsung.com"
            .Subject = "eStore Stock Diff (" & strDate & ") - " & intDiff
            .Body = "eStore Stock Diff (" & strDate & ") - " & intDiff
            .Display        ' Display the message in Outlook.
            .Attachments.Add ("C:\eStore\1_Stock_comparison\" & fileName)
            .send
        End With
        
    End If
    ' CLEAR.
    Set objEmail = Nothing:    Set objOutlook = Nothing
        
ErrHandler:
    '
End Sub
